@model IEnumerable<Project.Models.Appointment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body style="background-image:url(https://mydoctor.lk/wp-content/uploads/2019/05/slider-bg1-2.jpg)">
    <h2><b>All Appointments</b></h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient_email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient_email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <div>
        @using (Html.BeginForm("AdminMain", "Home", FormMethod.Post))
        {
            <input type="hidden" name="name" value="@Session["name"]" />
            <input type="hidden" name="ppassword" value="@Session["pwd"]" />
            <input type="submit" value="Back To Main" />
        }
    </div>
</body>