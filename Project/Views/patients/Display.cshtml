@model IEnumerable<Project.Models.patient>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="background-image:url(https://mydoctor.lk/wp-content/uploads/2019/05/slider-bg1-2.jpg)">
    <img src="https://elderjusticeny.org/wp-content/uploads/2020/04/medicare-supplemental-insurance.png" height="60" width="180" />
    <center><h2><b>Patient Records</b></h2></center>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pgender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pblood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pemail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.confirmpassword)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pgender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pblood)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pemail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.confirmpassword)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.pid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.pid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.pid })
                </td>
            </tr>
        }

    </table>
</body>
</html>
